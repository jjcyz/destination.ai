# API Keys

# Google Maps API (for traffic, elevation, geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# TransLink API (Vancouver public transit)
TRANSLINK_API_KEY=your_translink_api_key_here

# Lime API (bike/scooter sharing)
LIME_API_KEY=your_lime_api_key_here

# OpenWeatherMap API (weather data)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# City of Vancouver Open Data (road closures, construction)
# Note: This is typically free and doesn't require an API key

# Database
DATABASE_URL=sqlite:///./route_recommendation.db

# Application settings
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Gamification settings
SUSTAINABILITY_POINTS_BIKE=10
SUSTAINABILITY_POINTS_WALK=15
SUSTAINABILITY_POINTS_TRANSIT=8
SUSTAINABILITY_POINTS_CAR=0
